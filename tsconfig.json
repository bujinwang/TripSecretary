{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "paths": {
      "@app/*": ["app/*"],
      "@tamagui/*": ["app/tamagui/*"],
      "@tamaguiConfig": ["tamagui.config"]
    },
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext"],
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"]
  },
  "include": [
    "app/**/*",
    "*.js",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    "babel.config.js",
    "metro.config.js",
    "app/screens/**/__tests__/**/*",
    "app/services/**/__tests__/**/*",
    "app/templates/**/*.js"
  ]
}
